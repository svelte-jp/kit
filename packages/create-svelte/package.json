{
	"name": "create-svelte",
	"version": "5.3.0",
	"description": "A CLI for creating new SvelteKit projects",
	"repository": {
		"type": "git",
		"url": "https://github.com/sveltejs/kit",
		"directory": "packages/create-svelte"
	},
	"license": "MIT",
	"homepage": "https://kit.svelte.dev",
	"bin": "./bin.js",
	"main": "./index.js",
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"kleur": "^4.1.5"
	},
	"devDependencies": {
		"@playwright/test": "1.30.0",
		"@types/gitignore-parser": "^0.0.2",
		"gitignore-parser": "^0.0.2",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.0.0",
		"sucrase": "^3.29.0",
		"svelte": "^4.2.2",
		"tiny-glob": "^0.2.9",
		"vitest": "^0.34.5"
	},
	"scripts": {
		"build": "node scripts/build-templates",
		"test": "pnpm build && vitest run",
		"check": "tsc",
		"lint": "prettier --check . --config ../../.prettierrc --ignore-path ../../.gitignore --ignore-path .gitignore",
		"format": "pnpm lint --write",
		"prepublishOnly": "pnpm build",
		"postpublish": "echo \"Updating template repo\" && bash ./scripts/update-template-repo.sh"
	},
	"files": [
		"index.js",
		"dist",
		"bin.js",
		"utils.js",
		"types"
	],
	"types": "types/index.d.ts",
	"type": "module"
}
